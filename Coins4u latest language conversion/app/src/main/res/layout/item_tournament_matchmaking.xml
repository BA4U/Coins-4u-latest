<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:layout_marginVertical="20dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                android:src="@drawable/user_icon_default"
                android:contentDescription="@string/collect_coins"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/playerPic"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:paddingBottom="2dp"
                android:elevation="2dp"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/green"
                android:src="@drawable/coinlogowithtext_4u"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/thumbnail" />


            <LinearLayout
                android:id="@+id/textLinearLayout1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                app:layout_constraintBottom_toBottomOf="@+id/playerPic"
                app:layout_constraintEnd_toStartOf="@+id/playersJoinedLayout"
                app:layout_constraintStart_toEndOf="@+id/playerPic"
                app:layout_constraintTop_toTopOf="@+id/playerPic">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/bg4u_user"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/RED"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/playerPic"
                        app:layout_constraintTop_toTopOf="@+id/playerPic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/winText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Win:"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />

                    <TextView
                        android:id="@+id/win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="25"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/logoColor"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toBottomOf="@+id/userName" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="4dp"
                        android:contentDescription="@string/current_coins"
                        android:src="@drawable/coinlogowithtext_4u" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/playersJoinedLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/playerPic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/playerPic">

                <TextView
                    android:id="@+id/filledSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/RED"
                    android:textSize="16sp"
                    android:layout_marginHorizontal="4dp"/>

                <TextView
                    android:id="@+id/totalSlot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/RED"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/light_grey"
                app:layout_constraintBottom_toTopOf="@+id/tournamentInfo" />

            <!-- Tournament Info (Coins per Kill, Map, Date) -->
            <LinearLayout
                android:id="@+id/tournamentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@+id/playerPic">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/modeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Mode:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />

                    <TextView
                        android:id="@+id/mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="One Tap"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/RED"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mapText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Map:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />

                    <TextView
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Bermuda"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/RED"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:background="@color/light_grey" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Date:"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="10 Oct, 5:00 PM"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:textColor="@color/RED"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                android:background="@color/light_grey"
                app:layout_constraintTop_toBottomOf="@+id/tournamentInfo" />

            <LinearLayout
                android:id="@+id/tournamentDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                app:layout_constraintTop_toBottomOf="@+id/tournamentInfo">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Free Fire Max is a Battle Royale Game. Your account must have above 40 Lv. and ensure you have enough coins to play this game. "
                        android:textColor="@color/shadow_color"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_medium"
                        android:textStyle="normal"
                        app:layout_constraintStart_toEndOf="@+id/userProfilePic"
                        app:layout_constraintTop_toTopOf="@+id/userProfilePic" />

                    <Button
                        android:id="@+id/entryFeeBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_1"
                        android:text="Challenge Now"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textAllCaps="false"/>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
