<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.bg4u.coins4u.MainActivity">

    <!-- Existing views -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/appVersionTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- User Profile Image and avatar animation layout -->
            <RelativeLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="40dp"
                    android:elevation="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:id="@+id/languages"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/languages"
                    android:contentDescription="TODO"
                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/shareBtn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/share"
                    android:layout_marginTop="10dp"
                    android:contentDescription="TODO"
                    android:visibility="gone"
                    android:layout_marginEnd="20dp" />

                <!-- User Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_icon_default"
                    android:contentDescription="@string/camera_icon"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="4dp" />

                <!-- Premium Icon (Only visible for premium members) -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/premiumAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:scaleType="centerInside"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_rawRes="@raw/premium_avatar_animation" />
            </RelativeLayout>

            <!-- User Name -->
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/bg4u_user"
                android:textColor="@color/color_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Premium Icon -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/premiumIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@id/name"
                android:layout_alignBottom="@id/name"
                android:layout_toEndOf="@id/name"
                android:gravity="center"
                android:visibility="gone"
                android:scaleType="centerInside"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/premium_gold_icon" />

            <!-- User Location -->
            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:text="@string/locationUser"
                android:textColor="@color/shadow_color"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- User bio -->

            <!-- Achievements -->
            <TextView
                android:id="@+id/bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_location"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:backgroundTint="@color/colorPrimaryDarkLight"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:hint="@string/bio"
                android:maxLines="2"
                android:paddingHorizontal="30dp"
                android:paddingVertical="15dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:id="@+id/achievements_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bio"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <!-- Coins CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:backgroundTint="@color/colorPurple"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/current_coins"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/currentCoins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:contentDescription="@string/current_coins"
                            android:src="@drawable/coinlogowithtext_4u" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Quiz Activities CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:backgroundTint="@color/colorPurple"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/quiz_activity"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/correctAns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="50"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text=" | "
                            android:fontFamily="@font/roboto_bold"
                            android:textStyle="bold"
                            android:scaleY="2"
                            android:textColor="#000000"
                            android:textSize="24sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/wrongAns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="50"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/wrong" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- User Tic Tac toe Details -->

            <LinearLayout
                android:id="@+id/gameTicTacToe_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/achievements_layout"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_corner"
                android:backgroundTint="@color/colorPurple"
                android:layout_margin="5dp">

                <!-- Coins CardView -->
                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toBottomOf="@+id/achievements_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- Table Header Row -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_bg_rounded_corner"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="8dp"
                            android:text="@string/level"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/wins"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/Draw"
                            android:textAlignment="center"
                            android:textColor="@color/yellow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/Lost"
                            android:textColor="@color/darkOrange"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textAlignment="center" />
                    </TableRow>

                    <!-- Data Rows -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:padding="8dp"
                            android:text="@string/easy"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/easyWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/easyDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/easyLost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:padding="8dp"
                            android:text="@string/medium"
                            android:textAlignment="center"
                            android:textColor="@color/yellow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mediumWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mediumDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mediumLost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:padding="8dp"
                            android:text="@string/hard"
                            android:textAlignment="center"
                            android:textColor="@color/darkOrange"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hardWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hardDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hardLost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:padding="8dp"
                            android:text="Online"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/onlineWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/onlineDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/onlineLost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <!-- User Details -->
            <LinearLayout
                android:id="@+id/user_details_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gameTicTacToe_layout"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- Task -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/taskCompletedView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="10dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp">

                    <TextView
                        android:id="@+id/taskCompletedText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="Number of task completed"
                        android:padding="2dp"
                        android:textColor="#FFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:drawableStartCompat="@drawable/task"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/taskCompleted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Email -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/emailCardView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="10dp"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp">

                    <TextView
                        android:id="@+id/emailBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:hint="@string/update_your_email"
                        android:padding="2dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/email"
                        app:drawableTint="@color/colorPurple" />
                </androidx.cardview.widget.CardView>

                <!-- Connect google -->
                <TextView
                    android:id="@+id/googleBtn"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="4dp"
                    android:elevation="10dp"
                    android:background="@drawable/common_google_signin_btn_text_dark"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:selectableItemBackground"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Connect with google"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />


                <!-- Phone Number -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp">

                    <TextView
                        android:id="@+id/phoneNumberBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginStart="55dp"
                        android:drawablePadding="25dp"
                        android:hint="@string/phone_number"
                        android:padding="2dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/ic_call"
                        app:drawableTint="@color/colorPurple" />
                </androidx.cardview.widget.CardView>

                <!-- Age -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp">

                    <TextView
                        android:id="@+id/ageBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:drawablePadding="15dp"
                        android:hint="@string/age"
                        android:padding="2dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/age_group"
                        app:drawableTint="@color/colorPurple" />
                </androidx.cardview.widget.CardView>

                <!-- Refer Code -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginHorizontal="4dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="5dp"
                    app:cardMaxElevation="5dp">

                    <TextView
                        android:id="@+id/socialBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="15dp"
                        android:hint="@string/social_media_link"
                        android:padding="2dp"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:drawableStartCompat="@drawable/instagram"
                        app:drawableTint="@color/colorPurple"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="2dp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_details_layout"
                android:orientation="horizontal"
                android:padding="8dp">


                <Button
                    android:id="@+id/logoutBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_1"
                    android:maxWidth="140dp"
                    android:text="@string/logout"
                    android:textColor="@color/color_white" />

                <Button
                    android:id="@+id/editProfile"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_2"
                    android:maxWidth="140dp"
                    android:text="@string/edit_profile"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <!-- App Version -->
    <TextView
        android:id="@+id/appVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Version X.X.X"
        android:textColor="@color/color_white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>