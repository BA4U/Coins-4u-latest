<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TicTacToeOnline.GameActivity">

    <!-- Header View -->

    <!-- Logo Image -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ImageView
        android:id="@+id/logoTicTicToe"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="2dp"
        android:contentDescription="Icon of Tic Tac Toe"
        android:src="@drawable/tictactoe2"
        app:layout_constraintBottom_toBottomOf="@+id/player1View"
        app:layout_constraintEnd_toStartOf="@id/player2View"
        app:layout_constraintStart_toEndOf="@id/player1View"
        app:layout_constraintTop_toTopOf="@id/player1View" />

    <!-- Avatar Image -->
    <View
        android:id="@+id/player1View"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/RED"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@id/logoTicTicToe"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar" />

    <!-- User Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player1Pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Icon of Tic Tac Toe"
        android:elevation="10dp"
        android:src="@drawable/easy_bot"
        app:civ_border_color="@color/yellow"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toTopOf="@+id/player1View"
        app:layout_constraintEnd_toEndOf="@+id/player1View"
        app:layout_constraintStart_toStartOf="@+id/player1View"
        app:layout_constraintTop_toTopOf="@+id/player1View" />

    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:elevation="10dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/colorBlue"
        app:layout_constraintBottom_toTopOf="@+id/player1View"
        app:layout_constraintEnd_toEndOf="@+id/player1View"
        app:layout_constraintStart_toStartOf="@+id/player1View"
        app:layout_constraintTop_toTopOf="@+id/player1View">

    </androidx.core.widget.ContentLoadingProgressBar>

    <!-- "You" TextView -->
    <TextView
        android:id="@+id/player1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLength="18"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/aboutMeBody"
        android:textColor="#F7FE00"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/player1View"
        app:layout_constraintStart_toStartOf="@+id/player1View"
        app:layout_constraintTop_toBottomOf="@+id/player1Pic"
        app:layout_wrapBehaviorInParent="horizontal_only" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/player1Score"
        app:layout_constraintEnd_toEndOf="@+id/player1View"
        app:layout_constraintStart_toStartOf="@+id/player1View"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/player1Coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/current_coins"
            android:src="@drawable/coinlogowithtext_4u" />

    </LinearLayout>

    <!-- "You" TextView -->
    <TextView
        android:id="@+id/player1Score"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/btn_rounded_corner"
        android:backgroundTint="@color/black"
        android:elevation="10dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:maxLines="1"
        android:text="O : 10"
        android:textColor="@color/yellow"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player1View"
        app:layout_constraintEnd_toEndOf="@+id/player1View"
        app:layout_constraintStart_toStartOf="@+id/player1View"
        app:layout_constraintTop_toBottomOf="@+id/player1View" />

    <!-- Avatar Image -->
    <View
        android:id="@+id/player2View"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/edit_text_rounded_corner"
        android:backgroundTint="@color/RED"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/logoTicTicToe"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/player2Pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:contentDescription="Icon of Tic Tac Toe"
        android:elevation="10dp"
        android:src="@drawable/hard_bot"
        app:civ_border_color="@color/green"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toTopOf="@+id/player2View"
        app:layout_constraintEnd_toEndOf="@+id/player2View"
        app:layout_constraintStart_toStartOf="@+id/player2View"
        app:layout_constraintTop_toTopOf="@+id/player2View" />

    <!-- "VS" TextView -->
    <TextView
        android:id="@+id/Vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:paddingHorizontal="15dp"
        android:text="@string/vs"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/player1View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player1View" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/player1View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player1View">

        <Chronometer
            android:id="@+id/player1Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_timer"
            app:tint="@color/RED" />

        <Chronometer
            android:id="@+id/player2Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="00:00"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/turn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray_scale"
        android:fontFamily="@font/roboto_bold"
        android:paddingHorizontal="15dp"
        android:text="@string/win_coins"
        android:textColor="@color/colorWhite"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player1Score"
        app:layout_constraintEnd_toStartOf="@id/player2View"
        app:layout_constraintStart_toEndOf="@id/player1View"
        app:layout_constraintTop_toTopOf="@+id/player1Score" />

    <!-- "player2" TextView -->
    <TextView
        android:id="@+id/player2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLength="18"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/aboutMeBody"
        android:textColor="@color/green"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/player2View"
        app:layout_constraintStart_toStartOf="@+id/player2View"
        app:layout_constraintTop_toBottomOf="@+id/player2Pic"
        app:layout_wrapBehaviorInParent="horizontal_only" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/player2Score"
        app:layout_constraintEnd_toEndOf="@+id/player2View"
        app:layout_constraintStart_toStartOf="@+id/player2View"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:id="@+id/player2Coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:contentDescription="@string/current_coins"
            android:src="@drawable/coinlogowithtext_4u" />

    </LinearLayout>
    <!-- "player2" TextView -->
    <TextView
        android:id="@+id/player2Score"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/btn_rounded_corner"
        android:backgroundTint="@color/black"
        android:elevation="10dp"
        android:ellipsize="marquee"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:maxLines="1"
        android:text="X : 20"
        android:textColor="#07F83B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/player2View"
        app:layout_constraintEnd_toEndOf="@+id/player2View"
        app:layout_constraintStart_toStartOf="@+id/player2View"
        app:layout_constraintTop_toBottomOf="@+id/player2View" />

    <!-- TableLayout for Tic Tac Toe Grid -->

    <!-- TableLayout for 5x5 Tic Tac Toe Grid -->
    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        android:layout_margin="15dp"
        android:gravity="center"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toTopOf="@+id/rematchBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Score">

        <!-- Row 0 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Row 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_13"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Row 2 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_23"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_24"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Row 3 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_30"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_31"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_32"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_33"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_34"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

        <!-- Row 4 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_40"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_41"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_42"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_43"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_44"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/option_unselected"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/rematchBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_1"
        android:gravity="center"
        android:text="@string/reset"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
