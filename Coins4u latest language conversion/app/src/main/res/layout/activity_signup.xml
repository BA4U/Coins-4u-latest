<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.bg4u.coins4u.SignupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- ImageView -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:backgroundTintMode="screen"
                android:contentDescription="@string/collect_coins"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/coins4ulogo" />

            <!-- Signup CardView -->
            <androidx.cardview.widget.CardView
                android:id="@+id/signupCardView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="CREATE AN ACCOUNT"
                        android:textColor="@color/colorPurple"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Divider View -->
                    <View
                        android:id="@+id/view"
                        android:layout_width="100dp"
                        android:layout_height="5dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background" />

                    <!-- Name EditText -->
                    <EditText
                        android:id="@+id/nameBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/textbox"
                        android:drawableStart="@drawable/userorg"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPurple"
                        android:ems="10"
                        android:hint="Nickname"
                        android:inputType="textPersonName"
                        android:padding="15dp" />

                    <!-- Email EditText -->
                    <EditText
                        android:id="@+id/emailBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/textbox"
                        android:drawableStart="@drawable/email"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPurple"
                        android:ems="10"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:padding="15dp" />

                    <!-- Password EditText -->
                    <EditText
                        android:id="@+id/passwordBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/textbox"
                        android:drawableStart="@drawable/password"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPurple"
                        android:ems="10"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="15dp" />

                    <!-- Refer Code EditText
                    <EditText
                        android:id="@+id/referBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/textbox"
                        android:drawableStart="@drawable/userorg"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPurple"
                        android:ems="10"
                        android:hint="Refer Code"
                        android:inputType="textPersonName"
                        android:padding="15dp" />
                    -->
                    <!-- Submit Button -->
                    <Button
                        android:id="@+id/createNewBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/button_2"
                        android:text="Submit"
                        android:textColor="@color/color_white" />

                    <!-- Login Button -->
                    <Button
                        android:id="@+id/loginBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/button_4"
                        android:text="Already have an account?"
                        android:textColor="@color/color_white" />

                    <!-- Privacy Policy and Terms Text -->
                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="By signing up you agree to our privacy policy and terms and conditions."
                        android:textSize="10sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
