<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".chat.ProfileActivity">

    <!-- Existing views -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- User Profile Image and avatar animation layout -->
            <RelativeLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- User Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/visit_profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_icon_default"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="4dp" />

                <!-- Premium Icon (Only visible for premium members) -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/premiumAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:visibility="gone"
                    android:scaleType="centerInside"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_rawRes="@raw/premium_avatar_animation" />
            </RelativeLayout>

            <!-- User Name -->
            <TextView
                android:id="@+id/visit_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/bg4u_user"
                android:textColor="@color/color_white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Premium Icon -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/premiumIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@id/visit_user_name"
                android:layout_alignBottom="@id/visit_user_name"
                android:layout_toEndOf="@id/visit_user_name"
                android:gravity="center"
                android:scaleType="centerInside"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/premium_gold_icon" />

            <!-- User Location -->
            <TextView
                android:id="@+id/user_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/visit_user_name"
                android:layout_centerHorizontal="true"
                android:text="@string/locationUser"
                android:textColor="@color/shadow_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- User bio -->
            <TextView
                android:id="@+id/visit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_location"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/story_description_background"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:hint="@string/bio"
                android:maxLines="2"
                android:paddingHorizontal="30dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <!-- Achievements -->
            <LinearLayout
                android:id="@+id/achievements_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/visit_status"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Coins CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:elevation="10dp"
                    android:backgroundTint="@color/colorPurple"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/current_coins"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/currentCoins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="1000"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:contentDescription="@string/current_coins"
                            android:src="@drawable/coinlogowithtext_4u" />

                    </LinearLayout>
                </LinearLayout>

                <!-- Quiz Activities CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:backgroundTint="@color/colorPurple"
                    android:orientation="vertical"
                    android:elevation="10dp"
                    android:layout_weight="1"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quiz_activity"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/correctAns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="50"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="#000000"
                            android:textSize="24sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/wrongAns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="30"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/wrong" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- User Tic Tac toe Details -->

            <LinearLayout
                android:id="@+id/gameTicTacToe_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/achievements_layout"
                android:orientation="horizontal"
                android:background="@drawable/edit_text_rounded_corner"
                android:backgroundTint="@color/colorPurple"
                android:layout_margin="5dp">

                <!-- Coins CardView -->
                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    app:layout_constraintTop_toBottomOf="@+id/achievements_layout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- Table Header Row -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_bg_rounded_corner"
                        android:layout_marginBottom="1dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="8dp"
                            android:text="@string/level"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="8dp"
                            android:text="@string/wins"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="8dp"
                            android:text="@string/Draw"
                            android:textAlignment="center"
                            android:textColor="@color/yellow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/Lost"
                            android:textAlignment="center"
                            android:textColor="@color/darkOrange"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />
                    </TableRow>

                    <!-- Data Rows -->
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:padding="8dp"
                            android:text="@string/easy"
                            android:textAlignment="center"
                            android:textColor="@color/green"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/easyWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/easyDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/easyLost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="8dp"
                            android:text="@string/medium"
                            android:textAlignment="center"
                            android:textColor="@color/yellow"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mediumWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mediumDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mediumLost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@drawable/blue_bg_rounded_corner"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="8dp"
                            android:text="@string/hard"
                            android:textAlignment="center"
                            android:textColor="@color/darkOrange"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hardWin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hardDraw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hardLost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@drawable/blue_bg_thick_rounded_corner"
                            android:padding="8dp"
                            android:text="1"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/gameTicTacToe_layout"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="8dp">


                <Button
                    android:id="@+id/request_cancel_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:background="@drawable/button_1"
                    android:maxWidth="140dp"
                    android:text="@string/cancel_request"
                    android:textColor="@color/color_white" />

                <Button
                    android:id="@+id/send_message_request_button"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_2"
                    android:maxWidth="140dp"
                    android:text="@string/send_request"
                    android:textColor="@color/color_white" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>