<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quiz_bg"
    tools:context="com.bg4u.coins4u.ResultActivity">

    <!-- Existing views -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/premiumIconHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo"
                android:gravity="center"
                android:scaleType="centerInside"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_enableMergePathsForKitKatAndAbove="true"
                app:lottie_rawRes="@raw/reward_background" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:importantForAccessibility="no"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/coins4ulogo"
                tools:ignore="VectorDrawableCompat" />

            <!-- User Profile Image and avatar animation layout -->

            <!-- User Name -->
            <RelativeLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/logo">

                <!-- User Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hard_bot"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="4dp" />

                <!-- Premium Icon (Only visible for premium members) -->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/premiumAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:visibility="gone"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_enableMergePathsForKitKatAndAbove="true"
                    app:lottie_rawRes="@raw/premium_avatar_animation" />
            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/bg4u_user"
                android:textColor="@color/RED"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Premium Icon -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/premiumIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@id/name"
                android:layout_alignBottom="@id/name"
                android:layout_toEndOf="@id/name"
                android:gravity="center"
                android:visibility="gone"
                android:scaleType="centerInside"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/premium_gold_icon" />

            <!-- Quiz name -->
            <TextView
                android:id="@+id/quizName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_rounded_corner"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="5dp"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:text="@string/congratulations"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="28sp"
                android:textStyle="bold" />


            <!-- Task -->
            <androidx.cardview.widget.CardView
                android:id="@+id/WrongAnswerView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="4dp"
                android:elevation="10dp"
                android:layout_below="@id/achievements_layout"
                android:backgroundTint="@color/colorPrimary"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <TextView
                    android:id="@+id/correctAnswerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Win coins per correct Answer"
                    android:padding="2dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/right"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/correctAnswerPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Task -->
            <androidx.cardview.widget.CardView
                android:id="@+id/correctAnswerView"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="50dp"
                android:layout_below="@+id/WrongAnswerView"
                android:layout_marginHorizontal="4dp"
                android:backgroundTint="@color/colorPrimary"
                android:elevation="10dp"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp">

                <TextView
                    android:id="@+id/wrongAnsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:text="Lost coins per Wrong Answer"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/wrong" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/wrongAnsPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="4dp"
                        android:fontFamily="@font/roboto_bold"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Achievements -->
            <LinearLayout
                android:id="@+id/achievements_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/quizName"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:baselineAligned="false">

                <!-- Coins CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:elevation="5dp"
                    android:backgroundTint="@color/colorPurple"
                    android:orientation="vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/earned_coins"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/earnedCoins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_bold"
                            android:text="10"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:contentDescription="@string/current_coins"
                            android:src="@drawable/coinlogowithtext_4u" />

                    </LinearLayout>
                </LinearLayout>

                <!-- User Profile Image -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/catImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/quiz_icon"/>

                <!-- Quiz Activities CardView -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/edit_text_rounded_corner"
                    android:backgroundTint="@color/colorPurple"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:layout_weight="1"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="@string/your_score"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/correctAns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/right" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" | "
                            android:textColor="#000000"
                            android:textSize="24sp"
                            tools:ignore="HardcodedText" />


                        <TextView
                            android:id="@+id/wrongAns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="4dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            app:drawableEndCompat="@drawable/wrong" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/achievements_layout"
                android:layout_marginTop="140dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/shareBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_3"
                    app:drawableStartCompat="@drawable/ic_share"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:maxWidth="140dp"
                    android:text="@string/share"
                    android:textColor="@color/color_white" />

                <Button
                    android:id="@+id/restartBtn"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_1"
                    android:maxWidth="140dp"
                    android:text="@string/finish"
                    android:textColor="@color/color_white" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>