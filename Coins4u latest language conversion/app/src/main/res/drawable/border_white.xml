<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Shape -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#20000000" /> <!-- Shadow color, adjust opacity as desired -->
            <corners android:radius="50dp" />
        </shape>
    </item>

    <!-- Button Shape -->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#707070" /> <!-- Change the color to your desired shade -->
            <corners android:radius="50dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
            <stroke
                android:color="#FFFFFF"
                android:width="5dp" /> <!-- Increase the width to create a visible border -->

            <size android:height="3dp" /> <!-- Add a slight height to create a 3D effect -->
        </shape>
    </item>

</layer-list>


